<van-field value="{{ nameValue }}" size="large" maxlength="15" required clearable clickable="true" label="活动名" placeholder="请输入活动名称" bind:change="onNameChange" />
<van-cell required title="活动类型" size="large" is-link value="{{typeValue}}" bind:click="onClickType" arrow-direction="{{typeArrowDirection}}" />
<block wx:if="{{showTree}}">
  <van-tree-select items="{{ items }}" main-active-index="{{ mainActiveIndex }}" active-id="{{ activeId }}" bind:click-nav="onClickNav" bind:click-item="onClickItem" />
</block>
<van-field value="{{ numberValue }}" size="large"  type="digit" maxlength="4" required clickable="true" label="人数" placeholder="请设置参与人数上限" bind:change="onNumberChange" />
<van-field value="{{ introValue }}" size="large" show-word-limit="true" autosize="{{introSizeLimit}}" type="textarea" maxlength="100" required clearable clickable="true" label="介绍" placeholder="请输入活动介绍" bind:change="onIntroChange" />
<van-field value="{{ locationText }}" size="large" maxlength="30" required clearable clickable="true" label="活动地点" placeholder="点击选择活动位置" bind:click-input="onClickLocation" bind:change="onLocationChange" />
<van-field value="{{ siteValue }}" size="large" maxlength="20" required clearable clickable="true" label="起始时间" placeholder="请选择活动时间段" bind:click-input="onClickTime" />
<van-field value="{{ price }}" size="large" type="digit" maxlength="5" required clearable clickable="true" label="费用" placeholder="请输入报名费用" bind:confirm="onPriceChange" />


<van-uploader deletable="{{ true }}" max-count="3" file-list="{{ fileList }}" bind:after-read="afterRead" />